{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "*.mjs"],
  "exclude": ["node_modules"]
}
