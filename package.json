{
  "private": true,
  "workspaces": [
    "packages/stan",
    "packages/website",
    "packages/devtools",
    "packages/examples/*"
  ],
  "scripts": {
    "typecheck": "wsrun -p @rkrupinski/stan -c typecheck",
    "lint": "wsrun -p @rkrupinski/stan -c lint",
    "test": "wsrun -p @rkrupinski/stan -c test",
    "build": "wsrun -p @rkrupinski/stan -c build",
    "build:docs": "wsrun -p website -c build",
    "build:devtools": "wsrun -p devtools -c build"
  },
  "devDependencies": {
    "wsrun": "5.2.4"
  }
}
